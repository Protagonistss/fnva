# 环境切换工具配置文件示例
# 复制此文件到 ~/.fnva/config.toml (Linux/macOS) 或 %USERPROFILE%\.fnva\config.toml (Windows)

# 当前激活的 Java 环境名称
current_java_env = "jdk17"

# 默认 Java 环境名称（类似 fnm 的默认版本）
default_java_env = "jdk17"
default_cc_env = "glmcc"

# 自定义 Java 扫描路径（用于自动发现已安装的 Java）
custom_java_scan_paths = [
    "/usr/lib/jvm",           # Linux 系统默认 Java 安装路径
    "/Library/Java/JavaVirtualMachines",  # macOS 系统默认 Java 安装路径
    "C:\\Program Files\\Java",  # Windows 系统默认 Java 安装路径
]

# 明确移除的 Java 环境名称（防止重新扫描添加）
removed_java_names = []

# Java 环境配置
[[java_environments]]
name = "jdk17"
java_home = "/usr/lib/jvm/java-17-openjdk"
description = "OpenJDK 17 (Manual)"
source = "manual"

[[java_environments]]
name = "jdk11"
java_home = "/usr/lib/jvm/java-11-openjdk"
description = "OpenJDK 11 (Scanned)"
source = "scanned"

[[java_environments]]
name = "jdk21.0.3"
java_home = "/home/user/.fnva/java-packages/jdk-21.0.3"
description = "Java 21.0.3 (Installed)"
source = "manual"

# LLM 环境配置
[[llm_environments]]
name = "openai-dev"
provider = "openai"
api_key = "${OPENAI_API_KEY}"  # 支持环境变量引用
base_url = "https://api.openai.com/v1"
model = "gpt-4"
temperature = 0.7
max_tokens = 2000
description = "OpenAI 开发环境"

[[llm_environments]]
name = "anthropic-prod"
provider = "anthropic"
api_key = "${ANTHROPIC_API_KEY}"
base_url = "https://api.anthropic.com"
model = "claude-3-opus-20240229"
temperature = 0.8
max_tokens = 4096
description = "Anthropic 生产环境"

[[llm_environments]]
name = "azure-openai"
provider = "azure-openai"
api_key = "${AZURE_OPENAI_API_KEY}"
base_url = "https://your-resource.openai.azure.com"
model = "gpt-4"
description = "Azure OpenAI"

[[llm_environments]]
name = "ollama-local"
provider = "ollama"
base_url = "http://localhost:11434"
model = "llama2"
description = "本地 Ollama 服务"

# CC (Claude Code) 环境配置
[[cc_environments]]
name = "anthropic-cc"
provider = "anthropic"
api_key = "${ANTHROPIC_API_KEY}"
base_url = "https://api.anthropic.com"
sonnet_model = "claude-sonnet-4-5"    # 默认 sonnet 模型
# opus_model = "claude-opus-4-5"     # 可选：opus 专用模型
# haiku_model = "claude-haiku-4-5"   # 可选：haiku 专用模型
description = "Anthropic Claude Code 环境"

[[cc_environments]]
name = "moonshot-cc"
provider = "anthropic"
api_key = "${MOONSHOT_API_KEY}"
base_url = "https://api.moonshot.cn/anthropic"
sonnet_model = "claude-sonnet-4-5"
description = "Moonshot Claude Code 环境"

# 仓库配置
[repositories]

# Maven 仓库配置（用于查询依赖版本）
maven = [
    "https://maven.aliyun.com/repository/public",  # 阿里云 Maven 仓库（推荐，国内速度快）
    "https://search.maven.org/solrsearch/select",  # Maven Central 搜索 API
    "https://repo1.maven.org/maven2",  # Maven Central 仓库
]

# Java 下载器配置
[repositories.java]
# 主要下载器：tsinghua（清华 Adoptium 镜像），可回退 aliyun/github
downloader = "tsinghua"
# 备用下载器列表
fallback = ["aliyun", "github"]
# 是否启用自动回退到备用下载器
enable_fallback = true
# 传统仓库URL列表（向后兼容，已废弃但保留）
repositories = []

# Java 下载源配置（新架构，简化版）
[java_download_sources]
# 主要下载源：github 或 aliyun
# 主要下载源：tsinghua，fallback 为 aliyun/github
# 备用下载源名称列表
fallback = ["aliyun", "github"]
# 自定义下载源列表（可选）
sources = []

# Java 版本缓存配置
[java_version_cache]
# 缓存生存时间（秒），0 表示禁用缓存
ttl = 3600  # 1 小时
# 是否启用版本缓存
enabled = true

